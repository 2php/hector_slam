<?xml version="1.0"?>

<launch>
    <arg name="namespace_1" default="hector1" />
    <arg name="namespace_2" default="hector2" />

  <node pkg="hector_geotiff" type="geotiff_node" name="hector_geotiff_merged_map" output="screen" launch-prefix="nice -n 15">
    <remap from="map" to="/merged_map_serive" />
    <remap from="trajectory" to="$(arg namespace_1)/trajectory_service" />
    <param name="map_file_path" type="string" value="$(find hector_geotiff)/maps/merged_maps" />
    <param name="map_file_base_name" type="string" value="hector_merged_map" />
    <param name="geotiff_save_period" type="double" value="5" />
    <param name="draw_background_checkerboard" type="bool" value="true" />
    <param name="draw_free_space_grid" type="bool" value="true" />   
    <param name="service_name" type="string" value="/object_merger/get_object_model" />

    <param name="plugins" type="string" value="hector_barrel_geotiff_plugin/BarrelMapWriter hector_geotiff_plugins/TrajectoryMapWriter hector_geotiff_plugins/TrajectoryMapWriter hector_worldmodel_geotiff_plugins/QRCodeMapWriter hector_worldmodel_geotiff_plugins/VictimMapWriter" />
    <param name="plugin_names" type="string" value="barrel_plugin hector1_trajectory_plugin hector2_trajectory_plugin qrcode_plugin victim_plugin" />
    <param name="victim_plugin/draw_all_objects" value="false" />
    <param name="victim_plugin/class_id" value="victim" />
    <param name="victim_plugin/service_name" type="string" value="/object_merger/get_object_model" />
    <param name="qrcode_plugin/draw_all_objects" value="true" />
    <param name="qrcode_plugin/class_id" value="qrcode" />
    <param name="qrcode_plugin/service_name" type="string" value="/object_merger/get_object_model" />

    <param name="barrel_plugin/pkg_path" value="$(find hector_barrel_geotiff_plugin)" />
    <param name="barrel_plugin/barrel_threshold" value="0.8" /> 
    <param name="barrel_plugin/draw_all_objects" value="true" />
    <param name="barrel_plugin/class_id" value="barrel" />
    <param name="barrel_plugin/service_name" type="string" value="/object_merger/get_object_model" />

    
    <param name="hector1_trajectory_plugin/service_name" type="string" value="/hector1/trajectory_service
" />
    <param name="hector1_trajectory_plugin/path_color_r" type="int" value="120" />
    <param name="hector1_trajectory_plugin/path_color_g" type="int" value="0" />
    <param name="hector1_trajectory_plugin/path_color_b" type="int" value="240" />
    <param name="hector2_trajectory_plugin/service_name" type="string" value="/trajectory_transformer/trajectory_service
" />
<param name="hector2_trajectory_plugin/path_color_r" type="int" value="0" />
<param name="hector2_trajectory_plugin/path_color_g" type="int" value="255" />
<param name="hector2_trajectory_plugin/path_color_b" type="int" value="0" />
  </node>

</launch>

